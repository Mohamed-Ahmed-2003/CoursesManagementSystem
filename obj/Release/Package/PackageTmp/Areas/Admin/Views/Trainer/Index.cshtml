@model IEnumerable<CoursesManagementSystem.Models.Trainer>

@{
    ViewBag.Title = "Trainers";
}

<h2>Trainers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="data-tables datatable-primary">
    <table id="dataTable2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SocialLinks)
                </th>
                <th>
                    @Html.DisplayName("Modify")
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <ul class="list-group" >
                            @foreach (var url in CoursesManagementSystem.Services.Utility.ParseString(item.SocialLinks))
                            {
                               <li><a href="@url">@url</a></li>
                            }
                        </ul>
                    </td>

                    <td>
                        @Html.ActionLink("Courses", "Index", "Course", new { id = item.Id }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>


    </table>

</div>