@model  CoursesManagementSystem.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_AccessPagesLayout.cshtml";
}


<!-- preloader area start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<!-- preloader area end -->
<!-- login area start -->
<div class="login-area">
    <div class="container">
        <div class="login-box ptb--100">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="login-form-head">
                    <h4>Sign up</h4>
                    <p>Hello there, Sign up and Join with Us</p>
                </div>
                <div class="login-form-body">
                    <div class="form-gp">
                        <label for="exampleInputName1">Full Name</label>
                        @Html.LabelFor(m => m.Name, "Full Name")
                        @Html.EditorFor(m => m.Name)
                        <i class="fa-user fa"></i>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-gp">
                        @Html.LabelFor(m => m.Email, "Email Address")
                        @Html.EditorFor(m => m.Email)
                        <i class="fa-envelope-o fa"></i>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-gp">
                        @Html.LabelFor(m => m.PhoneNumber, "PhoneNumber")
                        @Html.EditorFor(m => m.PhoneNumber)
                        <i class="fa-mobile fa"></i>
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-gp d-flex justify-content-between align-content-center btn-group btn-group-toggle account-type" data-toggle="buttons">
                        <style>
                            input[type="radio"] {
                                visibility: hidden;
                                height: 0;
                                width: 0;
                            }
                        </style>
                        <div class="btn-group btn-group-toggle" role="group">
                            <label class="btn btn-outline-primary">
                                @Html.RadioButtonFor(model => model.AccountType, "Trainer", new { id = "option1" }) Trainer
                            </label>
                            <label class="btn btn-outline-primary">
                                @Html.RadioButtonFor(model => model.AccountType, "Trainee", new { id = "option2" }) Trainee
                            </label>
                        </div>
                        <div class="btn-group" role="group">
                            <i class="fa fa-user"></i>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.AccountType, "", new { @class = "text-danger" })




                    <div class="form-gp">
                        @Html.LabelFor(m => m.Password, "Password")
                        @Html.EditorFor(m => m.Password)
                        <i class="fa fa-lock"></i>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-gp">
                        @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
                        @Html.EditorFor(m => m.ConfirmPassword)
                        <i class="fa fa-lock "></i>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" type="submit">Submit <i class="fa fa-arrow-right"></i></button>
                        <div class="login-other row mt-4">
                            <div class="col-6">
                                <a class="fb-login" href="#">Sign up with <i class="fa fa-facebook"></i></a>
                            </div>
                            <div class="col-6">
                                <a class="google-login" href="#">Sign up with <i class="fa fa-google"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Don't have an account? @Html.ActionLink("Login", "Login", "Account")</p>
                    </div>
                </div>
                    }

                </div>
            }
    </div>
</div>


@section  Scripts {
    @Scripts.Render("~/Bundles/jqueryval")
}
<script>
    const account_type = document.querySelector(".account-type");
    account_type.addEventListener("click", (e) => {
        if (e.target.tagName === "INPUT") {
            account_type.querySelectorAll("label").forEach(input => input.classList.remove("active"));
            e.target.closest("label").classList.add("active");
        }
    })
</script>