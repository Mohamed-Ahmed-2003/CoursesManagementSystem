

@model IEnumerable<CoursesManagementSystem.Models.Course>





<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mt-3">
                <a href="Details/@item.Id">
                    <div class="card">
                        <div class="d-flex">
                            <div class="img-square-wrapper">
                                <img style="width:300px;height:180px;" src="~/Uploads/Courses/@item.ImageUrl" alt="Card image cap">
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                <p class=" text-black-50">By : @Html.DisplayFor(modelItem => item.Trainer.Name)</p>
                                
                        
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Created on: @Html.DisplayFor(modelItem => item.CreatedDate)</small>
                        </div>
                    </div>
            </a>
            </div>
        }
    </div>
</div>
