@model CoursesManagementSystem.ViewModels.TraineeViewModel

@{
    ViewBag.Title = "TrainerDetails";
}
<div class="container p-5">
    <div class="profile-page">
        <div class="d-flex justify-content-around flex-wrap ">
            <div>
                <div class="avatar">
                    <img style="width: 250px; height: 250px; border-radius: 50%;" class="object-fit-cover shadow "
                         src="~/Uploads/Courses/no-image.png" alt="Profile Image">
                </div>
                <div class="name mt-3 border-bottom d-inline-block p-2">
                    <h1 style="font-size:2rem">@Model.trainee.Name</h1>
                    <h4 class="text-black-50">Trainee</h4>
                </div>
               
            </div>

               
            </div>
        </div>

        <ul class="nav nav-pills mb-3 mt-5 d-flex flex-wrap justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" id="courses-tab" data-toggle="tab" href="#courses">Enrolled Courses</a>
            </li>
         
        </ul>

        <div class="tab-content mt-2">
            <div class="tab-pane fade show active" id="courses">
                <!-- Content for the Courses tab -->
                @Html.Partial("_CourseCard1", Model.EnrolledCourses)
            </div>

        </div>
    </div>

