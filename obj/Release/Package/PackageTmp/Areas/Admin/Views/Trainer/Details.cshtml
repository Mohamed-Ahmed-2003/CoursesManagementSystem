@model CoursesManagementSystem.Models.Trainer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <td>
                @Html.DisplayFor(model => model.Description)
            </td>
            
        </tr>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Expertise)
            </th>

            <td>
                @Html.DisplayFor(model => model.Expertise)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SocialLinks)
            </th>
            <td>
                @foreach (var url in CoursesManagementSystem.Services.Utility.ParseString(Model.SocialLinks))
                {
                    <a href="@url">@url</a>
                }
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <td>
                @Html.DisplayFor(model => model.AddedDate)
            </td>
        </tr>
    </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index")
</p>
