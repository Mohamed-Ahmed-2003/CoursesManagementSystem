@model IEnumerable<CoursesManagementSystem.Models.Trainee>

@{
    ViewBag.Title = "CourseTrainnes";

}

<h2 class="m-2">@ViewBag.Header</h2>
@Html.ActionLink("Go to courses","Index","Course",null ,new { @class = "btn btn-success m-2"})
@if (@ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger  d-inline-block">
        <h5>@ViewBag.Error</h5>
    </div>
}else { 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayName("Registration Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
</table>
    }
