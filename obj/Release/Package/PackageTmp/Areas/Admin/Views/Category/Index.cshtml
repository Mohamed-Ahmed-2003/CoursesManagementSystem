@model IEnumerable<CoursesManagementSystem.Models.Category>

@{
    ViewBag.Title = "Categories";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="data-tables datatable-primary">
<table id="dataTable2" class="text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th>
                @Html.DisplayName("Parent Category")
            </th>
            <th>

                @Html.DisplayName("Modify")

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning mr-2" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger ml-2" })
                   
                </td>
            </tr>
        }
    </tbody>
</table>
 </div>