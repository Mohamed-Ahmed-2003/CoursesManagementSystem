                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-info-circle", Style = "font-size: 1.5rem;" }) |
                        <a href="javascript:;" onclick="showDeleteConfirmation(@item.Id)" style="color: red; font-size: 1.5rem;" class="fa fa-trash"></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
