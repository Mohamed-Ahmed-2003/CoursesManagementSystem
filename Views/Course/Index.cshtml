@model IEnumerable<CoursesManagementSystem.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<!-- Topic Cards -->
<div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                    <a href="/Course/Details/@course.Id">
                        <div class="card-flyer">
                            <div class="text-box">
                                <div class="image-box">
                                    @{ string imageurl = course.ImageUrl;}
                                    @if (string.IsNullOrEmpty(imageurl))
                                    {
                                        imageurl = "no-image.png";
                                    }
                                    <img src="~/uploads/courses/@imageurl" alt="Course Image" />
                                </div>
                                <div class="text-container">
                                    <h6>@course.Name</h6>
                                    <p>@course.Description</p>
                                </div>

                                @*@Html.ActionLink(" ", "Details", "Course", new { course.Id }, new { @class = "btn btn-primary" ,
                                                                                        style= "background-color:#00acc1; border:none" })*@

                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
